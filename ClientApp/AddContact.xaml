<Window x:Class="ClientApp.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="AddContact" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://img.freepik.com/free-photo/purple-iridescent-texture-background_23-2151839362.jpg?semt=ais_hybrid"></ImageBrush>
    </Window.Background>
    <Grid Margin="20">
        <StackPanel Margin="0,0,0,-10">
            <TextBlock  FontWeight="Black" FontSize="20" Margin="0,0,0,20" Foreground="White" >Add Contact</TextBlock>

            <Label Content="Name:" FontWeight="Black" Foreground="White" ></Label>
            <TextBox Name="NameTextBox" Margin="0,0,0,10" Height="25" ></TextBox>

            <Label Content="Email:" FontWeight="Black" Foreground="White"></Label>
            <TextBox Name="EmailTextBox" Margin="0,0,0,10" Height="25" ></TextBox>

            <Label Content="Password:" FontWeight="Black" Foreground="White" ></Label>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,20" Height="25" ></PasswordBox>

            <Button FontWeight="Black" Click="Button_Click">Add Contact</Button>
            
        </StackPanel>
    </Grid>
</Window>
