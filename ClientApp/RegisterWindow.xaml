<Window x:Class="ClientApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="350" Width="450" Background="LightBlue">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Registration" FontWeight="Black" FontSize="20" Margin="0,0,0,20" />

            <Label Content="Name:" FontWeight="Black" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10" Height="25" />

            <Label Content="Email:" FontWeight="Black" />
            <TextBox Name="EmailTextBox" Margin="0,0,0,10" Height="25" />

            <Label Content="Password:" FontWeight="Black" />
            <PasswordBox Name="PasswordBox" Margin="0,0,0,20" Height="25" />

            <Button Content="Register" FontWeight="Black" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
