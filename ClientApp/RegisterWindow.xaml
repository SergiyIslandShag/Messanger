<Window x:Class="ClientApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="350" Width="450" Background="LightBlue">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Registration" FontWeight="Black" FontSize="20" Margin="0,0,0,20"></TextBlock>

            <Label Content="Name:" FontWeight="Black"></Label>
            <TextBox Name="NameTextBox" Margin="0,0,0,10" Height="25"></TextBox>

            <Label Content="Email:" FontWeight="Black"></Label>
            <TextBox Name="EmailTextBox" Margin="0,0,0,10" Height="25"></TextBox>

            <Label Content="Password:" FontWeight="Black"></Label>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,20" Height="25"></PasswordBox>

            <Button Content="Register" FontWeight="Black" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>