<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="650" Width="850" Background="LightSkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox Width="400" Height="30" Foreground="Gray" Padding="5" FontStyle="Italic" Text="Search"/>
            <Button Width="147" Height="30" Background="LightGreen" Foreground="White" FontWeight="Bold" Click="Search">Search</Button>
            <Button Width="228" Height="30" Margin="5,0,0,0" Background="LightGreen" Foreground="White" FontWeight="Bold" Click="Settings">Settings</Button>
        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Margin="5" Background="White">
                <ListBox.Items>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 1</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 2</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 3</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 4</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 5</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 6</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 7</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 8</Button>
                    <Button Height="45" Width="308" FontSize="14" Padding="10">Contact 9</Button>
                </ListBox.Items>
            </ListBox>
            <StackPanel Grid.Column="1" Margin="5">
                <TextBox Height="400" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" Text="Chat"
                         Background="White" Padding="10" FontSize="14" IsReadOnly="True"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="375" Height="44" Foreground="Gray" Background="White" Padding="10" FontSize="14" Text="Enter message:"/>
                    <Button Width="107" Height="44" Margin="5,0,0,0" Background="LightGreen" Foreground="White" FontWeight="Bold" Click="Send">Send</Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <TextBox Grid.Row="2" Background="Violet" TextAlignment="Center" VerticalAlignment="Bottom" IsReadOnly="True"
                 Text="❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️" Height="30"/>
    </Grid>
</Window>
