<Window x:Class="ClientApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        Title="Settings" Height="450" Width="550">
    <Window.Background>
        <ImageBrush ImageSource="https://img.freepik.com/premium-photo/neon-navy-abstract-creative-background-design_851755-317694.jpg?w=360" />
    </Window.Background>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Border CornerRadius="10" Background="DarkGray">
                <Button Name="btnPremium" Width="130" Height="30" Click="btnPremium_Click"
                        FontWeight="Bold" Background="Transparent">Activate Premium</Button>
            </Border>

            <Border CornerRadius="10" Background="DarkGray" Margin="0,5">
                <TextBox Name="txtPremiumCode" Width="130" Height="25" FontWeight="Bold"
                         Background="Transparent" BorderThickness="0" Padding="5">Enter code:</TextBox>
            </Border>
        </StackPanel>
        <Border CornerRadius="10" Background="DarkGray" Grid.Column="1" Margin="10,10,10,0">
            <ListBox Background="Transparent" Name="userInfoListBox">
                <!-- Приклад елементів у ListBox, можна розкоментувати та додати ваш контент -->
                <!--<ListBoxItem FontWeight="Bold" Name="UserFoto" Height="124" Width="134" Margin="0,50,0,0"></ListBoxItem>
                <ListBoxItem FontWeight="Bold" Name="UserName" Height="20" Width="207" Margin="0,10,0,10"></ListBoxItem>
                <ListBoxItem FontWeight="Bold" Name="UserEmail" Height="20" Width="207" Margin="0,10,0,10"></ListBoxItem>
                <ListBoxItem FontWeight="Bold" Name="UserPhonNum" Height="20" Width="207" Margin="0,10,0,10"></ListBoxItem>-->
            </ListBox>
        </Border>
    </Grid>
</Window>
